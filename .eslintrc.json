{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true,
      "spread": true,
      "object-shorthand": [
        "error",
        "always"
      ]
    },
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "no-mixed-operators": [
      1,
      {
        "allowSamePrecedence": true
      }
    ],
    "implicit-arrow-linebreak": 0,
    "object-curly-newline": 0
  }
}
